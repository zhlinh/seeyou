<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
       
        >

        <TextView
            android:id="@+id/chat_other_media_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="姓名" />

        <Button
            android:id="@+id/chat_other_media_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/chat_other_media_name"
             android:layout_alignTop="@+id/chat_other_media_name"
            android:background="@drawable/balon_in"
            android:text="音频" />
        
    </RelativeLayout>

</LinearLayout>
